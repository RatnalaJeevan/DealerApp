<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpSupportPage">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/black"
        android:padding="10dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/arrow_back">

        </ImageView>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/zonapro_regular"
            android:text="Need Help?"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/tv1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/zonapro_bold"
            android:gravity="center"
            android:maxLines="3"
            android:text="Help &amp; Support"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <ImageView
            android:layout_width="175dp"
            android:layout_height="136dp"
            android:layout_below="@+id/tv1_1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/help_centre">

        </ImageView>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1"
        android:layout_marginTop="10dp"
        android:text="Tell us how we can help"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:fontFamily="@font/zonapro_bold"/>
    <TextView
        android:id="@+id/tv4"
        android:layout_below="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:maxLines="3"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Our crew of superheroes are standing by  For services and support"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:fontFamily="@font/zonapro_regular"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="7dp"
        android:elevation="10dp"
        android:layout_below="@+id/tv4">
        <RelativeLayout
            android:id="@+id/rl_call_care"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_chat"
                android:layout_width="75dp"
                android:layout_height="64dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/chat_icon"
                >
            </ImageView>
            <TextView
                android:id="@+id/chat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_chat"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="Customer Care"
                android:textSize="18dp"
                android:fontFamily="@font/zonapro_bold">
            </TextView>
            <TextView
                android:id="@+id/label_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chat_tv"
                android:layout_toRightOf="@+id/iv_chat"
                android:text="Call us"
                android:textSize="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/zonapro_regular">
            </TextView>

            <ImageView
                android:id="@+id/iv_call"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/phone_green"
                >
            </ImageView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="7dp"
        android:elevation="10dp"
        android:layout_below="@+id/cv1">
        <RelativeLayout
            android:id="@+id/rl_email_support"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_email"
                android:layout_width="75dp"
                android:layout_height="64dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/email_icon"
                >
            </ImageView>
            <TextView
                android:id="@+id/email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_email"
                android:text="E mail"
                android:textSize="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/zonapro_bold">
            </TextView>
            <TextView
                android:id="@+id/email_tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_tv"
                android:layout_toRightOf="@+id/iv_email"
                android:layout_toLeftOf="@+id/iv_msg"
                android:text="Get the Solution become your inbox"
                android:textSize="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/zonapro_regular">
            </TextView>


            <ImageView
                android:id="@+id/iv_msg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/msg_blue"
                >
            </ImageView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>