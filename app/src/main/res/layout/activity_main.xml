<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rl_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/wd_icon_black">

        </ImageView>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/iv_filter"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/search_car"
            >

        </ImageView>
        <ImageView

            android:id="@+id/iv_filter"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/filter_black">

        </ImageView>
        <androidx.appcompat.widget.AppCompatButton
            android:visibility="gone"
            android:id="@+id/add_new_car_button"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:text="+"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:background="@drawable/add_features"/>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_pack_selection"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/cardview_lightgrey_margined"
            android:backgroundTint="@color/text_color1">

            <RelativeLayout
                android:id="@+id/rl_bundle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="-2dp"
                android:background="@drawable/cardview_lightgrey_margined"
                android:backgroundTint="@color/black"
                android:layout_toStartOf="@+id/c_v">

                <TextView
                    android:id="@+id/bundle_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/medium"
                    android:gravity="center"
                    android:lineSpacingExtra="3dp"
                    android:text="Bundle"
                    android:textColor="@color/white"
                    android:textSize="15dp">

                </TextView>
            </RelativeLayout>


            <View
                android:id="@+id/c_v"
                android:layout_width="1px"
                android:layout_height="1px"
                android:layout_centerInParent="true">

            </View>

            <RelativeLayout
                android:id="@+id/rl_single"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/c_v"
                android:elevation="1dp">

                <TextView
                    android:id="@+id/label_single"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/medium"
                    android:lineSpacingExtra="3dp"
                    android:text="Single"
                    android:textColor="@color/textcolour"
                    android:textSize="15dp">

                </TextView>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top"
        android:layout_above="@+id/card_btm_nav">

    </FrameLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_btm_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="5dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/l_bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/layout_1"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:layout_marginTop="11dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_home"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/home_selected_black" />
                <TextView
                    android:id="@+id/tv_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@color/textcolour"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:textSize="12dp"
                    android:visibility="visible"
                    android:fontFamily="@font/regular"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_2"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginTop="11dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_pack"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/unselected_pack"/>
                <TextView
                    android:id="@+id/tv_pack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Package"
                    android:textColor="@color/textcolour"
                    android:textSize="12dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:fontFamily="@font/regular"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_3"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginTop="11dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iv_customer"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/unslected_cust"/>
                <TextView
                    android:id="@+id/tv_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer"
                    android:textSize="12dp"
                    android:textColor="@color/textcolour"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:fontFamily="@font/regular"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_4"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_marginTop="11dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/profile_icon"/>
                <TextView
                    android:id="@+id/tv_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="12dp"
                    android:textColor="@color/textcolour"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:fontFamily="@font/regular"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:id="@+id/rl_transperant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transperant">


            <RelativeLayout
                android:id="@+id/rl_newdetails_adding"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:background="@drawable/rl_feature_pop_up">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:background="@color/lightgrey"/>

                <RelativeLayout
                    android:id="@+id/rl_new_car"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Car"
                        android:textSize="20dp"
                        android:textColor="@color/textcolour"
                        android:fontFamily="@font/semibold"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/right_arrow_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/new_inspection"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/rl_new_car">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/right_arrow_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Inspection"
                        android:textSize="20dp"
                        android:textColor="@color/textcolour"
                        android:fontFamily="@font/semibold"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"/>
                </RelativeLayout>
            </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>

