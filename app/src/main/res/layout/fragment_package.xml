<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PackageFragment"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_tabs"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/cv_gradient3">

        <RelativeLayout
            android:id="@+id/rl_packages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/v1"
            android:background="@drawable/cv_shroom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Packages"
                android:textColor="@color/white"
                android:textSize="18dp">

            </TextView>

        </RelativeLayout>

        <View
            android:id="@+id/v1"
            android:layout_width="1px"
            android:layout_height="1px"
            android:layout_centerInParent="true">

        </View>

        <RelativeLayout
            android:id="@+id/rl_add_ons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/v1"
            android:layout_alignParentEnd="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Add-Ons"
                android:textColor="@color/white"
                android:textSize="18dp">

            </TextView>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_buy_back"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/rl_tabs"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/cv_gradient3">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/buybag">

        </ImageView>
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/top_right_arrow"
            android:layout_marginTop="15dp">

        </ImageView>
        <TextView
            android:id="@+id/label_buy_guarantee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv1"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Buy Back\nGuarantee"
            android:lineSpacingExtra="-10dp"
            android:textColor="@color/white"
            android:textSize="40dp">

        </TextView>
        <TextView
            android:id="@+id/label_starts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_buy_guarantee"
            android:fontFamily="@font/poppins_regular"
            android:text="Starts From"
            android:textColor="@color/white"
            android:textSize="16dp">

        </TextView>

        <TextView
            android:id="@+id/label_bbg_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_starts"
            android:fontFamily="@font/poppins_semibold"
            android:text="3,456"
            android:textColor="@color/white"
            android:textSize="16dp">

        </TextView>
        <TextView
            android:id="@+id/label_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/label_bbg_amount"
            android:layout_below="@+id/label_starts"
            android:fontFamily="@font/poppins_regular"
            android:text="INR"
            android:textColor="@color/white"
            android:textSize="12dp">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label_starts"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/label_buy_guarantee"
            android:fontFamily="@font/poppins_regular"
            android:text="Valid From"
            android:textColor="@color/white"
            android:textSize="16dp">

        </TextView>

        <TextView
            android:id="@+id/label_bbg_valid_till"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_starts"
            android:layout_marginStart="30dp"
            android:layout_toRightOf="@+id/label_starts"
            android:fontFamily="@font/poppins_semibold"
            android:text="365 days"
            android:textColor="@color/white"
            android:textSize="16dp">

        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_showroom_warranty"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/rl_buy_back"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/cv_shroom">

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/showrrom_sample">

        </ImageView>
        <ImageView
            android:id="@+id/iv4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/top_right_arrow"
            android:layout_marginTop="15dp">

        </ImageView>
        <TextView
            android:id="@+id/label_showroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv3"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/poppins_regular"
            android:text="ShowRoom\nWarranty"
            android:lineSpacingExtra="-10dp"
            android:textColor="@color/white"
            android:textSize="40dp">

        </TextView>
        <TextView
            android:id="@+id/label_starts1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_showroom"
            android:fontFamily="@font/poppins_regular"
            android:text="Starts From"
            android:textColor="@color/white"
            android:textSize="16dp">

        </TextView>

        <TextView
            android:id="@+id/label_shroom_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_starts1"
            android:fontFamily="@font/poppins_semibold"
            android:text="3,456"
            android:textColor="@color/white"
            android:textSize="16dp">

        </TextView>
        <TextView
            android:id="@+id/label_currency1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/label_shroom_amount"
            android:layout_below="@+id/label_starts1"
            android:fontFamily="@font/poppins_regular"
            android:text="INR"
            android:textColor="@color/white"
            android:textSize="12dp">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/label_starts1"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/label_showroom"
            android:fontFamily="@font/poppins_regular"
            android:text="Valid From"
            android:textColor="@color/white"
            android:textSize="16dp">

        </TextView>

        <TextView
            android:id="@+id/label_showroom_valid_till"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_starts1"
            android:layout_marginStart="30dp"
            android:layout_toRightOf="@+id/label_starts1"
            android:fontFamily="@font/poppins_semibold"
            android:text="365 days"
            android:textColor="@color/white"
            android:textSize="16dp">

        </TextView>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rv_add_on_lists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rl_tabs"
        android:layout_above="@+id/rl_pay">

    </androidx.recyclerview.widget.RecyclerView>
    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/rv_main_pack_lists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rl_tabs"
        android:layout_above="@+id/rl_pay">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout

        android:id="@+id/rl_pay"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/cv_gradient3">

        <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="start"
            android:text="Amount"
            android:textColor="@color/lightgrey"
            android:textSize="13dp">

        </TextView>
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="24dp">

        </TextView>

        <TextView
            android:id="@+id/label_inr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/price"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="INR"
            android:textColor="@color/white"
            android:textSize="14dp">

        </TextView>
        <TextView
            android:id="@+id/percentage_amount_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="13dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center"
            android:text="You saved upto 0%"
            android:textColor="@color/lightgrey"
            android:textSize="13dp">

        </TextView>
        <RelativeLayout
            android:id="@+id/rl_pay_now"
            android:layout_width="115dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:padding="7dp"
            android:background="@drawable/cv_gradient1">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="Pay Now"
                android:textColor="@color/white"
                android:textSize="17dp">

            </TextView>
        </RelativeLayout>

    </RelativeLayout>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/idPBLoading"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/blue"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</RelativeLayout>