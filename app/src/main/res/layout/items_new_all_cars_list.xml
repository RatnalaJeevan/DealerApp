<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp">
        <RelativeLayout
            android:id="@+id/rl_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="20dp"
            android:paddingStart="15dp">

        <TextView
            android:id="@+id/tv_insp_on_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semibold"
            android:text="25 NOV"
            android:textColor="@color/blue"
            android:textSize="15dp"
            android:visibility="gone">
        </TextView>

            <TextView
                android:id="@+id/expire_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expires On"
                android:textSize="14dp"
                android:fontFamily="@font/semibold"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/expiry_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29 Apr 23"
                android:textSize="14dp"
                android:layout_below="@id/expire_date_label"
                android:textColor="@color/textcolour"
                android:fontFamily="@font/semibold"/>
            <ImageView
                android:id="@+id/imv_menu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/three_dots_menu"
                android:layout_alignParentEnd="true"
                android:visibility="gone"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/live_gif"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/live_gif_image"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/live"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:src="@drawable/live_button"
                android:layout_alignParentEnd="true"/>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/live_button"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:text="LIVE"
                android:visibility="gone"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:background="@drawable/live_button_back"/>



            <TextView
            android:visibility="gone"
            android:id="@+id/tv_inspect_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cardview_act_code"
            android:backgroundTint="@color/light_blue_wd"
            android:paddingTop="5dp"
            android:paddingBottom="2dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/semibold"
            android:text="REQUESTED"
            android:textColor="@color/white"
            android:textSize="15dp">
        </TextView>

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/expiry_date"
                android:layout_marginTop="10dp"
                android:background="@color/lightgrey">

            </View>
            <RelativeLayout
                android:id="@+id/rl_vehdetails"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/v1"
               >

                <ImageView
                    android:id="@+id/brand_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bmw_icon">

                </ImageView>

                <View
                    android:visibility="invisible"
                    android:id="@+id/vertical_line"
                    android:layout_width="2px"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/brand_logo"
                    android:background="@color/orange">

                </View>

                <RelativeLayout
                    android:id="@+id/rl_car_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toStartOf="@+id/iv_edit"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/vertical_line">

                    <TextView
                        android:id="@+id/tv_make_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:text="Swift Dzire"
                        android:textColor="@color/textcolour"
                        android:textSize="15sp">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_trans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_make_model"
                        android:fontFamily="@font/semibold"
                        android:text="Automatic"
                        android:textColor="@color/textcolour"
                        android:textSize="14dp">

                    </TextView>


                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                   android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/edit_black">

                </ImageView>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_veh_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_vehdetails"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/rl1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_veh_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:gravity="start"
                        android:text="Kms"
                        android:textColor="@color/lightgrey"
                        android:textSize="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_kmsdriven"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/label_veh_number"
                        android:fontFamily="@font/semibold"
                        android:text="80,000"
                        android:textColor="@color/textcolour"
                        android:textSize="15dp">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:gravity="center"
                        android:text="Fuel"
                        android:textColor="@color/lightgrey"
                        android:textSize="15dp"
                        android:layout_gravity="center">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_fueltype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/label_color"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/semibold"
                        android:text="Petrol"
                        android:textColor="@color/textcolour"
                        android:textSize="15dp"
                        android:layout_gravity="center">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rl7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:text="Year"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/lightgrey"
                        android:textSize="15dp"
                        android:layout_gravity="center">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_makeyear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/label2"
                        android:layout_marginTop="5dp"
                        android:text="2020"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/semibold"
                        android:textColor="@color/textcolour"
                        android:textSize="15dp"
                        android:layout_gravity="center">
                    </TextView>
                  </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/owner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:text="Owner"
                        android:textColor="@color/lightgrey"
                        android:textSize="15dp"
                        android:layout_gravity="right">

                    </TextView>

                    <TextView
                        android:id="@+id/owner_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/owner"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/semibold"
                        android:text="8"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/textcolour"
                        android:textSize="15dp">
                    </TextView>

                </LinearLayout>
               </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_ins_veh_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/linear_veh_details">
            <LinearLayout
                android:id="@+id/l_insurance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
            <TextView
                android:id="@+id/label_insu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/semibold"
                android:gravity="start"
                android:text="Insurance"
                android:textColor="@color/lightgrey"
                android:textSize="16dp">

            </TextView>

            <TextView
                android:id="@+id/tv_insu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_insu"
                android:fontFamily="@font/semibold"
                android:text="HDFC"
                android:layout_marginTop="2dp"
                android:textColor="@color/textcolour"
                android:textSize="14dp">
            </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l_veh_no"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                android:id="@+id/label_reg_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_veh_details"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/semibold"
                android:gravity="start"
                android:text="Reg No"
                android:textColor="@color/lightgrey"
                android:textSize="16dp">

            </TextView>
            <TextView
                android:id="@+id/tv_carno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/label_reg_no"
                android:fontFamily="@font/semibold"
                android:text="KA00AB0000"
                android:textColor="@color/textcolour"
                android:textSize="15dp">

            </TextView>
            </LinearLayout>
            </LinearLayout>


            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/linear_ins_veh_details"
                android:layout_marginTop="5dp"
                android:background="@color/lightgrey">

            </View>

            <View
                android:id="@+id/centre_line"
                android:layout_width="1px"
                android:layout_height="1px"
                android:layout_below="@+id/v2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@color/lightgrey">

            </View>


                <RelativeLayout

                    android:id="@+id/rl_photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/centre_line"
                    android:layout_toStartOf="@+id/centre_line"
                   android:layout_marginBottom="10dp" >

                    <TextView
                        android:id="@+id/label_photos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:text="Photos"
                        android:textColor="@color/lightgrey"
                        android:textSize="15dp">

                    </TextView>

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="-5dp"
                        android:layout_below="@+id/label_photos"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/white"
                        android:padding="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        >

                    </ImageView>
                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_toEndOf="@+id/iv1"
                        android:layout_marginTop="-5dp"
                        android:layout_marginStart="5dp"
                        android:layout_below="@+id/label_photos"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/white"
                        android:padding="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY">

                    </ImageView>
                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_toEndOf="@+id/iv2"
                        android:layout_marginTop="-5dp"
                        android:layout_marginStart="5dp"
                        android:layout_below="@+id/label_photos"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/white"
                        android:padding="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY">

                    </ImageView>
                    <TextView
                        android:id="@+id/tv_exta_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/label_photos"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@+id/iv3"
                        android:fontFamily="@font/medium"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/textcolour"
                        android:textSize="16dp">

                    </TextView>



                </RelativeLayout>

            <TextView
                android:id="@+id/text_add_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/semibold"
                android:text="ADD IMAGES"
                android:visibility="invisible"
                android:textColor="@color/textcolour"
                android:textSize="14dp"
                android:layout_below="@+id/centre_line"
                android:layout_marginTop="20dp" />
                <RelativeLayout
                    android:id="@+id/rl_last_insp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/centre_line"
                    android:layout_toEndOf="@+id/centre_line">

                    <TextView
                        android:id="@+id/label_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:text="Last Inspected"
                        android:textColor="@color/lightgrey"
                        android:textSize="15dp"
                        android:visibility="gone">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_last_insp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/label_price"
                        android:fontFamily="@font/semibold"
                        android:text=""
                        android:layout_marginTop="-4dp"
                        android:textColor="@color/textcolour"
                        android:textSize="15sp"
                        android:visibility="gone">
                    </TextView>

                    <TextView
                        android:id="@+id/text_add_features"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:text="ADD FEATURES"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/textcolour"
                        android:textSize="14dp"
                        android:layout_marginTop="20dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/add_feature_button"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15dp"
                        android:text="Add Features"
                        android:textSize="14dp"
                        android:visibility="gone"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:background="@drawable/add_features" />

                </RelativeLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linear_cp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_last_insp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_cp_kms"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >

                    <TextView
                        android:id="@+id/label_cp_kms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:text="C.P Kms"
                        android:textColor="@color/lightgrey"
                        android:textSize="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_cp_kms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/label_cp_kms"
                        android:fontFamily="@font/semibold"
                        android:text="75,000 "
                        android:layout_marginTop="-2dp"
                        android:textColor="@color/textcolour"
                        android:textSize="17sp">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_days"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="0.5"
                    >

                    <TextView
                        android:id="@+id/label_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semibold"
                        android:text="C.P Days"
                        android:textColor="@color/lightgrey"
                        android:textSize="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_cp_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/label_days"
                        android:layout_marginTop="-2dp"
                        android:fontFamily="@font/semibold"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="@color/textcolour"
                        android:textSize="16dp">

                    </TextView>

                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_cp_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_cp"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/label_cp_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/semibold"
                    android:text="Comments"
                    android:textColor="@color/lightgrey"
                    android:textSize="15dp">

                </TextView>

                <TextView
                    android:id="@+id/tv_cp_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label_cp_comments"
                    android:fontFamily="@font/semibold"
                    android:text=""
                    android:layout_marginTop="-2dp"
                    android:textColor="@color/textcolour"
                    android:textSize="17sp">

                </TextView>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/rl_sold_label"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rl_cv"
            android:background="@drawable/cv_soldcars"
            android:backgroundTint="@color/black">

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/user_iocn">

            </ImageView>

            <TextView
                android:id="@+id/tv_cust_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/profile_icon"
                android:fontFamily="@font/semibold"
                android:text="Karan Singh"
                android:layout_marginTop="-4dp"
                android:textColor="@color/white"
                android:textSize="15sp">

            </TextView>

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/forward_white">

            </ImageView>
        </RelativeLayout>

    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/rl_rep_req"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@+id/rl_cv"
        android:background="@drawable/cv_soldcars"
        android:backgroundTint="@color/black">

        <RelativeLayout
            android:id="@+id/rl_reasons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/centre_view">

            <TextView
                android:id="@+id/reason_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/semibold"
                android:text="Reasons"
                android:textColor="@color/white"
                android:textSize="13sp">

            </TextView>
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_arrow2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/arrow_drop_down">

            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_insp_req"
            android:layout_width="208dp"
            android:layout_height="66dp"
            android:layout_marginLeft="-3dp"
            android:layout_toRightOf="@+id/centre_view">

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/semibold"
                android:text="Repair Done"
                android:textColor="@color/white"
                android:textSize="13sp">

            </TextView>

            <TextView
                android:id="@+id/label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/semibold"
                android:text="Request Inspection"
                android:textColor="@color/white"
                android:textSize="13sp">

            </TextView>

            <ImageView

                android:id="@+id/iv_arrow1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:src="@drawable/forward_white">

            </ImageView>
        </RelativeLayout>

        <View
            android:id="@+id/centre_view"
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/white">

        </View>


    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_exp_veh"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@+id/rl_cv"
        android:background="@drawable/cv_soldcars"
        android:backgroundTint="@color/v_light_brown"
        >
            <TextView
                android:visibility="gone"
                android:id="@+id/label_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/semibold"
                android:text="Repair Done"
                android:textColor="@color/white"
                android:textSize="15sp">

            </TextView>

            <TextView
                android:id="@+id/label1_req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/semibold"
                android:text="Request Inspection"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textSize="15sp">

            </TextView>
            <ImageView

                android:id="@+id/iv_arrow3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/forward_white">

            </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_customer"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/rl_cv"
        android:layout_marginTop="-10dp"
        android:visibility="gone"
        android:background="@drawable/view_background">
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/eye_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/white_eye"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Views"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/view_number"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/view_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_toRightOf="@id/eye_icon"
            android:textColor="@color/white"
            android:fontFamily="@font/semibold"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp" />

        </RelativeLayout>

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_marginRight="30dp"
           android:layout_centerVertical="true">
        <TextView
            android:id="@+id/text_lead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leads"
            android:fontFamily="@font/semibold"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:textSize="14dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/new_lead_no"/>

           <TextView
            android:id="@+id/total_leadno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
               android:fontFamily="@font/semibold"
               android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/text_lead"
            android:textColor="@color/white"
            android:layout_marginRight="5dp"
            android:textSize="14dp" />

           <ImageView
               android:id="@+id/led_image"
               android:layout_width="20dp"
               android:layout_height="20dp"
               android:src="@drawable/leads_number_white"
               android:layout_toLeftOf="@id/total_leadno"
               android:layout_centerVertical="true"
               android:layout_marginRight="5dp"/>

           <TextView
               android:id="@+id/new_lead_no"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="(1 New)"
               android:fontFamily="@font/semibold"
               android:layout_centerVertical="true"
               android:layout_alignParentEnd="true"
               android:textColor="@color/white"
               android:textSize="14dp" />

       </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>