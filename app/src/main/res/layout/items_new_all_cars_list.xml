<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    >
        <RelativeLayout
            android:id="@+id/rl_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cv_allcars"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="20dp"
            android:paddingStart="15dp">

        <TextView
            android:id="@+id/tv_insp_on_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="25 NOV"
            android:textColor="@color/blue"
            android:textSize="15dp">

        </TextView>
        <TextView
            android:id="@+id/tv_inspect_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cardview_act_code"
            android:backgroundTint="@color/light_blue_wd"
            android:paddingTop="5dp"
            android:paddingBottom="2dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="REQUESTED"
            android:textColor="@color/white"
            android:textSize="15dp">
        </TextView>

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/tv_inspect_status"
                android:layout_marginTop="10dp"
                android:background="@color/lightgrey">

            </View>
            <RelativeLayout
                android:id="@+id/rl_vehdetails"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/v1"
               >

                <ImageView
                    android:id="@+id/brand_logo"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bmw_icon">

                </ImageView>

                <View
                    android:visibility="invisible"
                    android:id="@+id/vertical_line"
                    android:layout_width="2px"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/brand_logo"
                    android:background="@color/orange">

                </View>

                <RelativeLayout
                    android:id="@+id/rl_car_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toStartOf="@+id/iv_edit"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/vertical_line">

                    <TextView
                        android:id="@+id/tv_make_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Swift Dzire"
                        android:textColor="@color/black"
                        android:textSize="15sp">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_trans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_make_model"
                        android:fontFamily="@font/poppins_semibold"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14dp">

                    </TextView>


                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_edit"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                   android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_edit_24">

                </ImageView>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_veh_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_vehdetails"

                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                   >

                    <TextView
                        android:id="@+id/label_veh_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="start"
                        android:text="Kms"
                        android:textColor="@color/lightgrey"
                        android:textSize="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_kmsdriven"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:layout_below="@+id/label_veh_number"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="80,000"
                        android:textColor="@color/black"
                        android:textSize="15dp">

                    </TextView>



                    <TextView
                        android:id="@+id/label_insu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_kmsdriven"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="start"
                        android:text="Insurance"
                        android:textColor="@color/lightgrey"
                        android:textSize="16dp">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_insu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/label_insu"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginTop="-2dp"
                        android:text="HDFC"
                        android:textColor="@color/black"
                        android:textSize="14dp">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/label_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:text="Fuel"
                        android:textColor="@color/lightgrey"
                        android:textSize="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_fueltype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/label_color"
                        android:layout_marginTop="-5dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Petrol"
                        android:textColor="@color/black"
                        android:textSize="15dp">

                    </TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4">

                    <TextView
                        android:id="@+id/label2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Year"
                        android:textColor="@color/lightgrey"
                        android:textSize="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_makeyear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/label2"
                        android:layout_marginTop="-5dp"
                        android:text="2020"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:textSize="15dp">

                    </TextView>

                    <TextView

                        android:id="@+id/label_reg_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_makeyear"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="start"
                        android:text="Reg No"
                        android:textColor="@color/lightgrey"
                        android:textSize="16dp">

                    </TextView>
                    <TextView
                        android:id="@+id/tv_carno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"
                        android:layout_below="@+id/label_reg_no"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="KA00AB0000"
                        android:textColor="@color/black"
                        android:textSize="15dp">

                    </TextView>
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/linear_veh_details"
                android:layout_marginTop="5dp"
                android:background="@color/lightgrey">

            </View>

            <LinearLayout
                android:id="@+id/linear_price_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v2"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@+id/label_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Price"
                        android:textColor="@color/lightgrey"
                        android:textSize="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/label_price"
                        android:fontFamily="@font/poppins_bold"
                        android:text="75,00,000"
                        android:layout_marginTop="-4dp"
                        android:textColor="@color/black"
                        android:textSize="17sp">

                    </TextView>

                    <TextView
                        android:id="@+id/label_inr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/tv_price"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_below="@+id/label_price"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="INR"
                        android:textColor="@color/black"
                        android:textSize="11dp">

                    </TextView>
                </RelativeLayout>

                <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/rl_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    >

                    <TextView
                        android:id="@+id/label_photos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Photos"
                        android:textColor="@color/lightgrey"
                        android:textSize="15dp">

                    </TextView>

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="-5dp"
                        android:layout_below="@+id/label_photos"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/white"
                        android:padding="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        >

                    </ImageView>
                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_toEndOf="@+id/iv1"
                        android:layout_marginTop="-5dp"
                        android:layout_marginStart="5dp"
                        android:layout_below="@+id/label_photos"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/white"
                        android:padding="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY">

                    </ImageView>
                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_toEndOf="@+id/iv2"
                        android:layout_marginTop="-5dp"
                        android:layout_marginStart="5dp"
                        android:layout_below="@+id/label_photos"
                        android:background="@drawable/circle_white"
                        android:backgroundTint="@color/white"
                        android:padding="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY">

                    </ImageView>
                    <TextView
                        android:id="@+id/tv_exta_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/label_photos"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@+id/iv3"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="+2"
                        android:textColor="@color/black"
                        android:textSize="16dp">

                    </TextView>

                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/v3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/linear_price_photos"
                android:layout_marginTop="3dp"
                android:background="@color/lightgrey">

            </View>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linear_cp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v3"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_cp_kms"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    >

                    <TextView
                        android:id="@+id/label_cp_kms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="C.P Kms"
                        android:textColor="@color/lightgrey"
                        android:textSize="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_cp_kms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/label_cp_kms"
                        android:fontFamily="@font/poppins_bold"
                        android:text="75,000 "
                        android:layout_marginTop="-2dp"
                        android:textColor="@color/black"
                        android:textSize="17sp">

                    </TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_days"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="0.5"
                    >

                    <TextView
                        android:id="@+id/label_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="C.P Days"
                        android:textColor="@color/lightgrey"
                        android:textSize="15dp">

                    </TextView>

                    <TextView
                        android:id="@+id/tv_cp_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/label_days"
                        android:layout_marginTop="-2dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="10"
                        android:textColor="@color/black"
                        android:textSize="16dp">

                    </TextView>

                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_cp_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_cp"
                android:layout_marginTop="5dp"
                >

                <TextView
                    android:id="@+id/label_cp_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Comments"
                    android:textColor="@color/lightgrey"
                    android:textSize="15dp">

                </TextView>

                <TextView
                    android:id="@+id/tv_cp_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label_cp_comments"
                    android:fontFamily="@font/poppins_bold"
                    android:text=""
                    android:layout_marginTop="-2dp"
                    android:textColor="@color/black"
                    android:textSize="17sp">

                </TextView>

            </RelativeLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/label_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/iv_hide"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/v3"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Hide"
                android:textColor="@color/black"
                android:textSize="16dp">

            </TextView>
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_hide"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/v3"
                android:background="@drawable/map_border">

            </ImageView>

        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_sold_label"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_below="@+id/rl_cv"
            android:background="@drawable/cv_soldcars"
            android:backgroundTint="@color/v_light_green"
            >

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:src="@drawable/user_iocn">

            </ImageView>

            <TextView
                android:id="@+id/tv_cust_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/profile_icon"
                android:fontFamily="@font/poppins_semibold"
                android:text=""
                android:layout_marginTop="-4dp"
                android:textColor="@color/black"
                android:textSize="17sp">

            </TextView>

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/forward_white">

            </ImageView>
        </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_insp_req"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@+id/rl_cv"
        android:background="@drawable/cv_soldcars"
        android:backgroundTint="@color/v_light_brown"
        >



        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Repair Done"
            android:textColor="@color/white"
            android:textSize="15sp">

        </TextView>

        <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Request Inspection"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            android:textSize="15sp">

        </TextView>
        <ImageView
            android:id="@+id/iv_arrow1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/forward_white">

        </ImageView>
    </RelativeLayout>
</RelativeLayout>