<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:background="@color/white"
    >

       <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
           android:paddingBottom="10dp">
        <TextView
            android:id="@+id/label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/semibold"
            android:text="1."
            android:textColor="@color/cement"
            android:textSize="25dp">

        </TextView>

        <TextView
            android:id="@+id/label_pack_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/rl_1st"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/label1"
            android:fontFamily="@font/medium"
            android:text="Warranty"
            android:textColor="@color/textcolour"
            android:textSize="16dp">

        </TextView>

           <TextView
               android:id="@+id/sub_pack_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/label_pack_type"
               android:layout_marginStart="10dp"
               android:layout_marginTop="5dp"
               android:layout_marginEnd="10dp"
               android:layout_toEndOf="@+id/label1"
               android:fontFamily="@font/regular"
               android:text="Warranty"
               android:textColor="@color/textcolour"
               android:textSize="14dp">

           </TextView>

           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingLeft="10dp"
               android:paddingRight="10dp"
               android:paddingTop="5dp"
               android:paddingBottom="5dp"
               android:background="@drawable/cv_req_insp"
               android:backgroundTint="#dff8df"
               android:layout_marginStart="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginEnd="5dp"
               android:layout_toEndOf="@+id/label1"
               android:layout_below="@+id/sub_pack_name">
               <TextView
                   android:id="@+id/label_pending"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/medium"
                   android:text="Pending :"
                   android:textColor="@color/black"
                   android:textSize="12dp">

               </TextView>
           </RelativeLayout>





        <RelativeLayout
            android:id="@+id/rl_1st"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/map_border"
            android:padding="5dp">

            <ImageView
                android:visibility="gone"
                android:id="@+id/selected"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/black_tickmark">

            </ImageView>
        </RelativeLayout>

           <TextView
               android:id="@+id/label_exp_date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginEnd="5dp"
               android:layout_marginTop="20dp"
               android:layout_below="@+id/sub_pack_name"
               android:layout_toStartOf="@+id/exp_date"
               android:fontFamily="@font/regular"
               android:text="Expires on:"
               android:textColor="@color/red"
               android:textSize="13dp">

           </TextView>
           <TextView
               android:id="@+id/exp_date"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginEnd="15dp"
               android:layout_marginTop="20dp"
               android:layout_alignParentEnd="true"
               android:layout_below="@+id/sub_pack_name"
               android:fontFamily="@font/semibold"
               android:text="10"
               android:textColor="@color/red"
               android:textSize="13dp">

           </TextView>
    </RelativeLayout>
       <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@+id/rl1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
           android:layout_marginTop="10dp"
        android:background="@color/lightgrey">

    </View>
</RelativeLayout>