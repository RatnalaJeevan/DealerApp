<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_margin="5dp"
    android:id="@+id/rl_whole"
    android:background="@drawable/cv_black_border">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

    <TextView
        android:id="@+id/tv_sub_pack_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/semibold"
        android:text="HatchBack+Sedan"
        android:textColor="@color/textcolour"
        android:textSize="14dp">
     </TextView>

    <TextView
        android:id="@+id/any_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Any Brand)"
        android:textSize="14dp"
        android:fontFamily="@font/semibold"
        android:textColor="@color/textcolour"
        android:layout_below="@id/tv_sub_pack_name"
        android:layout_marginStart="20dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_select"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp">

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_buy_warranty"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/close_white">

        </ImageView>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/semibold"
            android:gravity="center"
            android:text="SELECT"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:background="@drawable/cardview_act_code"
            android:backgroundTint="@color/black">

        </TextView>
    </RelativeLayout>
</RelativeLayout>