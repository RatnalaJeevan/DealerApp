<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout

        android:id="@+id/rl_offer_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/map_border"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp">


        <TextView
            android:visibility="gone"
            android:id="@+id/pack_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/poppins_regular"
            android:text="AddOn"
            android:textColor="@color/orange"
            android:textSize="13sp">

        </TextView>
            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pack_type"
                android:paddingEnd="5dp"
                android:layout_toStartOf="@+id/v1"
                >

                <TextView
                    android:id="@+id/label_pack_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="start"
                    android:text="Package Name"
                    android:textColor="@color/lightgrey"
                    android:textSize="15dp">

                </TextView>

                <TextView
                    android:id="@+id/pack_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/label_pack_name"
                    android:fontFamily="@font/poppins_semibold"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="15dp">

                </TextView>



                <TextView
                    android:id="@+id/label_act_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pack_name"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="start"
                    android:text="Activation Code"
                    android:textColor="@color/lightgrey"
                    android:textSize="16dp">

                </TextView>

                <TextView
                    android:id="@+id/tv_act_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label_act_code"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp">

                </TextView>

            </RelativeLayout>
        <View
            android:id="@+id/v1"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true">

        </View>

            <RelativeLayout
                android:id="@+id/rl7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/v1"
                android:layout_below="@+id/pack_type"
                android:paddingStart="10dp"
               >

                <TextView
                    android:id="@+id/label_act_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Activated Date"
                    android:textColor="@color/lightgrey"
                    android:textSize="15dp">

                </TextView>

                <TextView
                    android:id="@+id/tv_act_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/label_act_date"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/black"
                    android:textSize="15dp">

                </TextView>

                <TextView

                    android:id="@+id/label_sold_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_act_date"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="start"
                    android:text="Sold Date"
                    android:textColor="@color/lightgrey"
                    android:textSize="16dp">

                </TextView>
                <TextView
                    android:id="@+id/tv_sold_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/label_sold_date"
                    android:fontFamily="@font/poppins_semibold"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="15dp">

                </TextView>
            </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>